<h1>YOUR POSTS</h1>
<p><%= notice %></p>
<table class="ggg">
<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to 'See the post', post_path(post.id) %></td>
    <td><%= link_to "Edit", edit_post_path(post.id) %></td>
    <td><%= link_to 'Delete', post_path(post.id), method: :delete ,data: { confirm: 'Are you sure you want to delete it?' } %></td>
  </tr>
<% end %>
</table>
<br>
<%= link_to 'Compose New Post', new_post_path %>
